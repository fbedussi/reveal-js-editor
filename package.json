{
  "name": "Remedi",
  "description": "A cross platform editor to author reveal.js presentation in markdown",
  "version": "1.0.0",
  "author": {
    "name": "Francesco Bedussi",
    "email": "francesco@francescobedussi.it",
    "url": "http://www.francescobedussi.it"
  },
  "bugs": {
    "url": "https://github.com/fbedussi/reveal-js-editor/issues"
  },
  "dependencies": {
    "electron-spellchecker": "^0.6.1",
    "fs-extra": "^1.0.0",
    "markdown-it": "^8.1.0",
    "markdown-it-classy": "^0.2.0",
    "markdown-it-container": "^2.0.0",
    "markdown-it-modify-token": "^1.0.2",
    "markdown-it-synapse-table": "^1.0.6",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-redux": "^5.0.1",
    "redux": "^3.6.0",
    "reveal.js": "^3.3.0"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "devtron": "^1.3.0",
    "electron": "^1.4.3",
    "electron-packager": "^8.1.0",
    "electron-rebuild": "^1.4.0",
    "spectron": "^3.4.0",
    "standard": "^8.4.0",
    "webpack": "^1.14.0"
  },
  "keywords": [
    "reveal",
    "markdown",
    "editor",
    "presentation",
    "html"
  ],
  "license": "MIT",
  "main": "lib/main.js",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git://github.com/fbedussi/reveal-js-editor.git"
  },
  "scripts": {
    "package": "electron-packager . 'remedi'",
    "package-overwrite": "electron-packager . 'remedi' --overwrite",
    "package-overwrite-asar": "electron-packager . 'remedi' --overwrite --asar",
    "package-all": "electron-packager . 'Reveal Editor' --platform=all --arch=all",
    "start": "electron .",
    "dev": "webpack --watch"
  }
}
